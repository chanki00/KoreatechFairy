<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ScheduleActivity">

    <RelativeLayout
        android:id="@+id/topbar"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:paddingBottom="5dp"
        android:background="@drawable/border_bottom"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/imgBtn_schedule_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/back" />

        <Button
            android:id="@+id/btn_schedule_mypage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/notify_my_page_border"
            android:fontFamily="@font/btn_font2"
            android:text="마이페이지" />

    </RelativeLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/lecture_box"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/topbar">

        <!-- 이곳에 스크롤 가능한 나머지 컨텐츠를 배치합니다 -->
        <GridLayout
            android:id="@+id/schedule_grid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:columnCount="6"
            android:padding="16dp"
            android:rowCount="20"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <!-- Header Row -->
            <TextView
                android:layout_row="0"
                android:layout_column="0"
                android:background="#E0E0E0"
                android:gravity="center"
                android:padding="10dp"
                android:text="Time" />

            <TextView
                android:layout_row="0"
                android:layout_column="1"
                android:background="#E0E0E0"
                android:gravity="center"
                android:padding="10dp"
                android:text="Mon" />

            <TextView
                android:layout_row="0"
                android:layout_column="2"
                android:background="#E0E0E0"
                android:gravity="center"
                android:padding="8dp"
                android:text="Tue" />

            <TextView
                android:layout_row="0"
                android:layout_column="3"
                android:background="#E0E0E0"
                android:gravity="center"
                android:padding="8dp"
                android:text="Wed" />

            <TextView
                android:layout_row="0"
                android:layout_column="4"
                android:background="#E0E0E0"
                android:gravity="center"
                android:padding="8dp"
                android:text="Thu" />

            <TextView
                android:layout_row="0"
                android:layout_column="5"
                android:background="#E0E0E0"
                android:gravity="center"
                android:padding="8dp"
                android:text="Fri" />

            <!-- Time slots -->
            <!-- Example for 09:00 and 09:30 slots, replicate for each 30 minutes up to 18:00 -->
            <TextView
                android:layout_row="1"
                android:layout_column="0"
                android:background="#E0E0E0"
                android:gravity="center"
                android:padding="8dp"
                android:text="09:00" />

            <TextView
                android:id="@+id/first"
                android:width="60dp"
                android:layout_row="1"
                android:layout_column="2"
                android:background="#E0E0E0"
                android:gravity="center"
                android:padding="8dp"
                />
            <TextView
                android:id="@+id/second"
                android:width="60dp"
                android:layout_row="2"
                android:layout_column="2"
                android:background="#E0E0E0"
                android:gravity="center"
                android:padding="8dp"

                android:ellipsize="end"
                />

            <TextView
                android:layout_row="2"
                android:layout_column="0"
                android:background="#E0E0E0"
                android:gravity="center"
                android:padding="8dp"
                android:text="09:30" />

            <TextView
                android:layout_row="3"
                android:layout_column="0"
                android:background="#E0E0E0"
                android:gravity="center"
                android:padding="8dp"
                android:text="10:00" />

            <TextView
                android:layout_row="4"
                android:layout_column="0"
                android:background="#E0E0E0"
                android:gravity="center"
                android:padding="8dp"
                android:text="10:30" />
            <TextView
                android:layout_row="5"
                android:layout_column="0"
                android:background="#E0E0E0"
                android:gravity="center"
                android:padding="8dp"
                android:text="10:30" />
            <TextView
                android:layout_row="6"
                android:layout_column="0"
                android:background="#E0E0E0"
                android:gravity="center"
                android:padding="8dp"
                android:text="10:30" />
            <TextView
                android:layout_row="7"
                android:layout_column="0"
                android:background="#E0E0E0"
                android:gravity="center"
                android:padding="8dp"
                android:text="10:30" />
            <TextView
                android:layout_row="8"
                android:layout_column="0"
                android:background="#E0E0E0"
                android:gravity="center"
                android:padding="8dp"
                android:text="10:30" />
            <TextView
                android:layout_row="9"
                android:layout_column="0"
                android:background="#E0E0E0"
                android:gravity="center"
                android:padding="8dp"
                android:text="10:30" />
            <TextView
                android:layout_row="10"
                android:layout_column="0"
                android:background="#E0E0E0"
                android:gravity="center"
                android:padding="8dp"
                android:text="10:30" />
            <TextView
                android:layout_row="11"
                android:layout_column="0"
                android:background="#E0E0E0"
                android:gravity="center"
                android:padding="8dp"
                android:text="10:30" />
            <TextView
                android:layout_row="12"
                android:layout_column="0"
                android:background="#E0E0E0"
                android:gravity="center"
                android:padding="8dp"
                android:text="10:30" />
            <TextView
                android:layout_row="13"
                android:layout_column="0"
                android:background="#E0E0E0"
                android:gravity="center"
                android:padding="8dp"
                android:text="10:30" />
            <!-- Continue for all time slots until 18:00 -->
            <TextView
                android:layout_row="19"
                android:layout_column="0"
                android:background="#E0E0E0"
                android:gravity="center"
                android:padding="8dp"
                android:text="18:00" />

            <!-- Empty slots for classes, these will be filled dynamically -->
            <!-- Placeholder example -->
            <TextView
                android:layout_row="1"
                android:layout_column="1"
                android:background="#FFFFFF"
                android:gravity="center"
                android:padding="8dp"
                android:text="" />

            <TextView
                android:layout_row="2"
                android:layout_column="1"
                android:background="#FFFFFF"
                android:gravity="center"
                android:padding="8dp"
                android:text="" />
            <!-- Continue for all rows and columns -->
        </GridLayout>


</androidx.core.widget.NestedScrollView>
    <!-- 고정된 헤더 행 -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/lecture_box"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="500dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#E0E0E0"
            android:orientation="horizontal"
            android:padding="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.8"
                android:text="과목코드"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_weight="1.2"
                android:text="학점"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/textView9"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="13dp"
                android:layout_weight="2.4"
                android:text="이름"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/textView6"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="74dp"
                android:layout_weight="1.2"
                android:text="분반"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/textView7"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="14dp"
                android:layout_weight="1.7"
                android:text="교수"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/textView8"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_weight="1.5"
                android:text="개설학부"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/textView11"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/lecture_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/header">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/schedule_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>




