<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/notify"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF">

    <RelativeLayout
        android:id="@+id/topbar"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:paddingBottom="5dp"
        android:background="@drawable/border_bottom"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/imgBtn_notify_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/back" />

        <Button
            android:id="@+id/btn_notify_mypage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/notify_my_page_border"
            android:fontFamily="@font/btn_font2"
            android:text="마이페이지" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/topbar">

        <FrameLayout
            android:id="@+id/frame"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </FrameLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="65dp"
            android:layout_height="match_parent"
            android:background="@drawable/border_right"
            android:orientation="vertical">


            <Button
                android:id="@+id/keyword_button"
                android:layout_width="63dp"
                android:layout_height="70dp"
                android:layout_marginTop="60dp"
                android:background="@drawable/notify_button_border"
                android:fontFamily="@font/btn_font2"
                android:text="키워드"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/common_button"
                android:layout_width="63dp"
                android:layout_height="70dp"
                android:layout_marginTop="50dp"
                android:background="@drawable/notify_button_border"
                android:fontFamily="@font/btn_font2"
                android:text="일반"

                app:layout_constraintEnd_toEndOf="@+id/keyword_button"
                app:layout_constraintStart_toStartOf="@+id/keyword_button"
                app:layout_constraintTop_toBottomOf="@+id/keyword_button" />

            <Button
                android:id="@+id/benefit_button"
                android:layout_width="63dp"
                android:layout_height="70dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/notify_button_border"
                android:fontFamily="@font/btn_font2"
                android:text="장학"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/employ_button"
                app:layout_constraintTop_toBottomOf="@+id/employ_button" />

            <Button
                android:id="@+id/academic_button"
                android:layout_width="63dp"
                android:layout_height="70dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/notify_button_border"
                android:fontFamily="@font/btn_font2"
                android:text="학사"
                app:layout_constraintEnd_toEndOf="@+id/common_button"
                app:layout_constraintStart_toStartOf="@+id/common_button"
                app:layout_constraintTop_toBottomOf="@+id/common_button" />

            <Button
                android:id="@+id/job_button"
                android:layout_width="63dp"
                android:layout_height="70dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/notify_button_border"
                android:fontFamily="@font/btn_font2"
                android:text="취업"
                app:layout_constraintEnd_toEndOf="@+id/academic_button"
                app:layout_constraintStart_toStartOf="@+id/academic_button"
                app:layout_constraintTop_toBottomOf="@+id/academic_button" />

            <Button
                android:id="@+id/employ_button"
                android:layout_width="63dp"
                android:layout_height="70dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/notify_button_border"
                android:fontFamily="@font/btn_font2"
                android:text="채용"
                app:layout_constraintEnd_toEndOf="@+id/job_button"
                app:layout_constraintStart_toStartOf="@+id/job_button"
                app:layout_constraintTop_toBottomOf="@+id/job_button" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:elevation="4dp"
                android:rotation="340"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/crown" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
